/* pages/Card/Card.wxss */
page {
  background-color: white;
}

.card {
  width: 680rpx;
  height: 300rpx;
  margin-left: 27rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
  position: relative;
}

.card image {
  margin-left: -15rpx;
  width: 800rpx;
  height: 500rpx;
  margin-top: -150rpx;
  z-index: -1;
}

.card .box {
  position: absolute;
  top: 53rpx;
}

.card .box .num {
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 300;
  text-align: left;
 
  margin-left: 51rpx;
  margin-top: 20rpx;
}

.num1{
  color: #d8c8a7;
}

.num2{
  color: #6D6D6D;
}

.num3{
  color: #775B33;
}

.num4{
  color: #566F92;
}

.num5{
  color: #4E5A7D;
}

.card .box .top {
  font-size: 48rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
 
  margin-left: 51rpx;
}

.top1{
  color: #f2e1b6;
}

.top2{
  color: #5C5E60;
}

.top3{
  color: #7B5520;
}

.top4{
  color: #4D6588;
}

.top5{
  color: #3E4A6B;
}



.card .txt {
  position: absolute;
  bottom: 22rpx;
  margin-left: 51rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #a79677;
}

.detail {
  margin-left: 27rpx;
  margin-top: 60rpx;
  padding-right: 40rpx;
}

.detail .title {

  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}

.detail .txt {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  line-height: 34rpx;
  font-weight: 400;
  text-align: left;
  color: #666666;
  margin-top: 24rpx;
}

.tab {
  width: 750rpx;
  margin-top: 36rpx;
}

.tab .frist {
  width: 100%;
  height: 79rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  opacity: 0.76;
}

.tab .change{
  opacity: 1;
  background: #f6f7f7;
}

.tab .frist view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #343434;
  line-height: 79rpx;
}