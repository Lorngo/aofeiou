/* subpackages/shop/cart/cart.wxss */
.body {
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
  height: auto;
  min-height: calc(100vh - 100rpx);
}

.goods {
  padding-top: 30rpx;
}

.goods .ul {
  overflow: hidden;
  padding-bottom: 40rpx;
}

.wrap {
  width: 100%;
  max-width: 92%;
  margin: 0 auto;
}

.goods .li {
  background-color: #fff;
  border-radius: 14rpx;
  position: relative;
  transition: .3s;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.goods .li:not(:last-child) {
  margin-bottom: 20rpx;
}

.goods .li.ons {
  transform: translateX(-140rpx);
}

.icon {
  border: 2rpx solid #E4E6E9;
  border-radius: 50%;
  width: 26rpx;
  height: 26rpx;
  font-size: 0;
  background-color: #F6F7F7;
}

.icon text {
  font-size: 30rpx;
  opacity: 0;
}

.goods .li.on .icon text,
.allSelect.on .icon text {
  opacity: 1;
}

.goods .li.on .icon,
.allSelect.on .icon {
  border-color: transparent;
}

.hover-class {
  background: #165D4C;
  color: #fff;
}

.goods .li .img {
  width: 160rpx;
  height: 160rpx;
  background-size: cover !important;
  border-radius: 6rpx;
  margin: 0 28rpx 0 15rpx;
}

.goods .li .img image {
  width: 100%;
  height: 100%;
}

.goods .li .h2 {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #222;
}

.goods .li .h3 {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  display: inline-block;
  margin-top: 10rpx;
}

.goods .li .h3 text{
  margin-left: 20rpx;
}

.goods .li .bottom {
  margin-top: 26rpx;
}

.price {
  font-size: 30rpx;
  color: #D73F45;
  font-weight: bold;
}

.num {
  border-radius: 6rpx;
  font-size: 0;
  z-index: 5;
  width: 204rpx !important;
  height: 54rpx !important;
  display: flex;
  align-items: center;
  
}

.num button {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50%;
  padding: 0rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

.num view {
  width: 14rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #666666;
  line-height: 33rpx;

}

.num .left {
  background-color: #F6F7F7;
  color: #ABABAB;
}

.num .right {
  background-color: #D26255;
  color: #ffffff;
}

.num button {
  font-weight: bold;
}




.count {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  background: #fff;
  height: 100rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx 0 #ddd;
  transform: translateY(100%);
  transition: all .3s;
}

.count.on {
  transform: translateY(0);
}

.count .icon {
  display: block;
  margin-right: 13rpx;
}

.count .btn,
.count .prices {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.prices text {
  font-size: 30rpx;
  color: #F0452D;
  font-weight: bold;
}



.selects {
  width: 75rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.allSelect {
  padding: 0 10rpx 0 50rpx;
  height: 100%;
}

.count .delete {
  font-size: 24rpx;
  padding: 20rpx 10rpx;
}

.guard {
  width: 227rpx;
  height: 124rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.goods .li .tel {
  font-size: 22rpx;
  color: #999;
}

.goods .li .del {
  position: absolute;
  left: 100%;
  top: 0;
  width: 140rpx;
  height: 100%;
  background: #D73F45;
  color: #fff;
  border-radius: 10rpx;
}

.flex1 {
  flex: 1;
  height: 160rpx;
}

.ul .li .flex-cen {
  height: 234rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count {
  display: flex;
  justify-content: space-between;
  padding-right: 0rpx !important;
}


.count .right {
  width: 480rpx;
  display: flex !important;
  justify-content: space-between;
}

.count .but {
  width: 238rpx !important;
  height: 100rpx;
  line-height: 100rpx;
  background: #D05748;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ffffff;
  border-radius: 0rpx !important;
  padding: 0rpx !important;
}

.icon-gouxuan{
  color: #D05748 !important;
}

.detail{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0rpx;
  z-index: 999 !important;
}

.detail .box{
  width: 750rpx;
  height: 833rpx;
  background-color: white;
  position: absolute;
  bottom: 0rpx;
}

.detail .box .top{
  width: 694rpx;
  height: 174rpx;
  margin: 28rpx auto;
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #F3F3F3;
}

.detail .box .top .left{
  width: 173rpx;
  height: 173rpx;
}

.detail .box .top image{
  width: 100%;
  height: 100%;
}

.detail .main {
  display: flex;
  flex-wrap: wrap;
  margin-left: 25rpx;
}

.detail .main view{
  width: 100%;
}

.detail .main .title{
  font-size: 28rpx;
font-family: PingFang SC, PingFang SC-Regular;
font-weight: 400;
text-align: left;
color: #333333;
}


.detail .main .kucun{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #999999;
}

.detail .main .price {
  opacity: 0.82;
font-size: 24rpx;
font-family: PingFang SC, PingFang SC-Regular;
font-weight: 400;
color: #c63220;
line-height: 54rpx;
display: flex;
height: 54rpx;
}


.detail .main .price .num{
  font-size: 30rpx;
}

.detail .right{
  width: 26rpx;
  height: 26rpx;
}

.detail .right image{
  width: 100%;
  z-index: -1;
  height: 100%;
}

.detail .cont{
  width: 694rpx;
  height: 100rpx;
  margin-top: 31rpx;
  margin: 0rpx auto;
  margin-bottom: 36rpx;
  
}

.detail .cont .title{
  width: 56rpx;
height: 40rpx;
font-size: 28rpx;
font-family: PingFang SC, PingFang SC-Regular;
font-weight: 400;
text-align: left;
color: #333333;
}

.detail .cont .opt{
  display: flex;
  margin-top: 14rpx;
}

.detail .cont .opt view{
  padding: 19rpx 20rpx;
  background-color: #F6F7F7;
  margin-right: 55rpx;
  font-size: 24rpx;
font-family: PingFang SC, PingFang SC-Regular;
font-weight: 400;
color: #666666;
}

.detail .cont .opt .change{
  background-color: #C63220;
  color: white;
}

.detail .cont .pick{
  width: 120rpx;
  height: 52rpx;
  border: 2rpx solid #D1D1D1;
  align-items: center;
  display: flex;
  padding: 5rpx 90rpx 5rpx 24rpx;
}

.detail .cont .pick picker{
  font-size: 24rpx;
font-family: PingFang SC, PingFang SC-Regular;
font-weight: 400;
color: #666666;
}

.detail .but{
  width: 594rpx;
  height: 94rpx;
  background-color: #383838;
  color: white;
  border-radius: 8rpx;
  margin: 60rpx auto;
  text-align: center;
  line-height: 94rpx;
}