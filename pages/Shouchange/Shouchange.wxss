/* pages/Shouchange/Shouchange.wxss */

.head {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  background-color: white;
}

.label {
  background-color: #fff;
  box-shadow: 0 0 10rpx 0 #ddd;
  position: relative;
  z-index: 5;
}

.label .item {
  flex: 1;
  text-align: center;
  padding-top: 19rpx;
}

swiper,
scroll-view {
  width: 100%;
  height: 100%;
}

.label .item .text {
  position: relative;
  padding-bottom: 10rpx;
  display: inline-block;
}

.label .item .text .after {
  display: block;
  width: 0;
  height: 5rpx;
  border-radius: 6rpx;
  background-color: #c63220;
  position: absolute;
  left: 50%;
  top: 115%;
  transition: all .3s;
}

.head .change{
  color: #c63220 !important;
}




.label .item .text .after.on {
  width: 100%;
  left: 0;
}

.head view {
  width: 60rpx;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #999;
}



.list {
  width: 694rpx;
  height: 234rpx;
  margin-left: 28rpx;
  background-color: white;
  margin-top: 29rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list view {
  overflow: hidden;
}

.list .left {
  margin-left: 24rpx;
  display: flex;
}

.list .left .img {
  height: 174rpx;
}

.list .left image {
  width: 174rpx;
  height: 174rpx;
}

.list .left .txt {
  width: 220rpx;
  height: 174rpx;
  margin-left: 24rpx;
}

.list .left .title {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  margin-top: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.list .left .size {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-top: 14rpx;
}

.list .left .price {
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  margin-top: 20rpx;
  color: #c63220;
  line-height: 33px;
}

.list .left .price .icon {
  font-size: 24rpx;
  font-size: Regular;
}

.list .right {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-right: 24rpx;
}

.wenzhang {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 29rpx;
}

.wenzhang .box {
  width: 332rpx;
  height: 432rpx;
}

.wenzhang .box .img {
  width: 332rpx;
  height: 332rpx;
  overflow: hidden;
}

.wenzhang .box .img image {
  width: 100%;
  height: 100%;
}


.wenzhang .box .txt {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 1rem;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


