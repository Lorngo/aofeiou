.head {
  width: 750rpx;
  height: 200rpx;
  display: flex;
  background-color: white;

}

.head .box {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.head .box .top {
  width: 52rpx;
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  line-height: 37rpx;
  font-weight: 400;
  color: #999999;
}

.head .box .main {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #999999;
  margin-top: 0rpx;
}

.head .icon {
  width: 59rpx;
  height: 59rpx;
  position: absolute;
  left: 346rpx;
  top: 173rpx;
}

.head .icon image {
  width: 100%;
  height: 100%;
}

.cart .top {
  width: 90rpx;
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-left: 26rpx;
  margin-top: 36rpx;
}

.cart .box{
  width: 218rpx;
  margin-top: 30rpx;
 display: flex;
 flex-wrap: wrap;
 margin-right: 21rpx;
}


.cart .box .img{
  width: 218rpx;
  height: 218rpx;
  overflow: hidden;
}

.cart .box .img image{
  width: 100%;
  height: 100%;

}



.cart .box .price{
  margin-top: 22rpx;
  margin-left: 10rpx;
}

.shop{
  display: flex;
  
  flex-wrap: wrap;
}

.cart{
  margin-left: 28rpx;
}

.cart .box .price text:nth-of-type(1){
  opacity: 0.82;
font-size: 24rpx;
