page {
  font-family: 'pangmenzhengdao';
}

.label {
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx solid#EFEFEF;
  z-index: 5;
  display: flex;

}

.label .item {
  flex: 1;
  padding-top: 19rpx;
  padding-bottom: 17rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #999999;
}

swiper,
scroll-view {
  width: 100%;
  height: 100%;
}

.label .item .text {
  position: relative;
  padding-bottom: 10rpx;
  display: inline-block;
}

.label .item .text .after {
  display: block;
  width: 0;
  height: 6rpx;
  border-radius: 6rpx;
  background-color: #C63220;
  position: absolute;
  left: 50%;
  top: 115%;
  transition: all .3s;
}

.label .item .text .after.on {
  width: 100%;
  left: 0;
}

